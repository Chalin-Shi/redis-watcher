{
  "name": "redis-adapter",
  "version": "1.0.0",
  "description": "Redis watcher for node-casbin",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "scripts": {
    "prepack": "yarn run lint && yarn run test && yarn build",
    "postpack": "rimraf lib",
    "prettier": "prettier --write **/*.{ts,js}",
    "build": "rimraf lib && tsc -p tsconfig.release.json",
    "lint": "tslint -p . -c tslint.json",
    "test": "jest"
  },
  "devDependencies": {
    "@types/ioredis": "^4.0.12",
    "@types/jest": "^24.0.11",
    "@types/node": "^10.5.3",
    "coveralls": "^3.0.2",
    "jest": "^24.3.1",
    "lint-staged": "^8.1.7",
    "prettier": "^1.17.1",
    "rimraf": "^2.6.2",
    "ts-jest": "^24.0.0",
    "tslint": "^5.11.0",
    "typescript": "^3.4.5"
  },
  "dependencies": {
    "casbin": "^3.0.3",
    "ioredis": "^4.11.1"
  },
  "files": [
    "lib",
    "examples"
  ],
  "homepage": "http://casbin.org",
  "repository": {
    "type": "git",
    "url": "https://github.com/node-casbin/redis-watcher.git"
  },
  "licenses": [
    {
      "type": "Apache-2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0"
    }
  ],
  "lint-staged": {
    "*.{ts,js}": [
      "prettier --write",
      "git add"
    ]
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  }
}
